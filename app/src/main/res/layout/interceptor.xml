<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
			android:id="@+id/interceptor_button_intercept"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="8dp"
		
			android:typeface="serif"
			android:textStyle="bold"
			android:textSize="13sp"
			android:textColor="#000000"
			android:padding="4dp"
			android:background="#daa049"
            android:text="Intercept on " />

        <Button
			android:id="@+id/interceptor_button_forward"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="8dp"
			android:background="#daa049"
			android:typeface="serif"
			android:textStyle="bold"
			android:textSize="13sp"
			android:padding="4dp"
			android:textColor="#000000"
            android:text="forward" />
			
		<Button
			
			android:id="@+id/interceptor_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="8dp"
			android:background="#daa049"
			android:typeface="serif"
			android:padding="4dp"
			android:textStyle="bold"
			android:textSize="13sp"
			android:textColor="#000000"
            android:text="edit" />
    </LinearLayout>

    <EditText
        android:id="@+id/interceptor_editText"
		android:background="@null"
		android:textColor="#ffffff"
		android:textSize="14sp"
		android:editable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>